<%- include('partials/header'); %> 
<div id="main">
   <div class="container-fluid">
     <div class="row">
       <div id="sidebar" class="col-md-3">
        <h2>Sidebar</h2>
       </div>  
       <main role="main" class="col-md-9">
        <p>&nbsp;</p>
        <h2>Update</h2>
        <form action="/account" method="post" enctype="multipart/form-data">
          <input type="email" name="email" placeholder="Email" value="<%= locals.user.email %>">
          <input type="test" name="displayName" placeholder="My name" value="<%= locals.user.displayName %>">
          <input type="file" name="avatar">
          <button type="submit">Update</button>
          <p><img src="<%= locals.user.photoURL %>" alt="" style="width:33%"></p>
          <% if (locals.errors && locals.errors.profile) { %>
            <% locals.errors.profile.forEach(function(error) { %>
              <p class="alert alert-primary" role="alert"><%= error %></p>
            <% }) %>
          <% } %>
        </form>
       </main>
     </div> 
   </div>
</div>
<%- include('partials/footer'); %>